<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:scivu.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="scivu.Views.AddPictureView"
             x:DataType="vm:AddPictureViewModel">
     <StackPanel>
      <Grid ColumnDefinitions="auto,50,auto,50,auto" HorizontalAlignment="Center">
        <Button Grid.Column="0" Margin="10"  Command="{Binding ChoosePicture}">
            Choose picture
        </Button>
        <Button Grid.Column="2" Margin="10" Command="{Binding UploadPicture}">
            Upload new picture
        </Button>
      </Grid>
    </StackPanel>
</UserControl>
